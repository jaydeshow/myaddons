			<CheckButton name="$parentCheckButton2" inherits="UICheckButtonTemplate">
				<Size>
					<AbsDimension x="20" y="20"/>
				</Size>
				<Anchors>
					 <Anchor point="LEFT" relativeTo="$parentCheckButton1" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						if this:GetChecked() then
							FW.Settings[this:GetParent().option] = FW.Settings[this:GetParent().option] + 2;
						else
							FW.Settings[this:GetParent().option] = FW.Settings[this:GetParent().option] - 2;
						end
						if this:GetParent().func then this:GetParent().func(); end
					</OnClick>
					<OnShow>
						this:SetChecked(FW.Settings[this:GetParent().option]>=2);
					</OnShow>
				</Scripts>
			</CheckButton>
			<Button name="$parentDefault">
				<Size>
					<AbsDimension x="45" y="20"/>
				</Size>
				<Anchors>
					 <Anchor point="RIGHT" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="-5" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						getglobal(this:GetParent():GetName().."EditBox"):SetText(FW.Default[this:GetParent().option.."Msg"]);
						FW.Settings[this:GetParent().option.."Msg"] = FW.Default[this:GetParent().option.."Msg"];
						
						getglobal(this:GetParent():GetName().."CheckButton1"):SetChecked(FW.Default[this:GetParent().option] == 1 or FW.Default[this:GetParent().option] == 3);
						getglobal(this:GetParent():GetName().."CheckButton2"):SetChecked(FW.Default[this:GetParent().option] >=2);

						FW.Settings[this:GetParent().option] = FW.Default[this:GetParent().option];
						if this:GetParent().func then this:GetParent().func(); end
					</OnClick>
				</Scripts>
				<NormalFont inherits="GameFontNormalSmall"/>
				<HighlightFont inherits="GameFontHighlightSmall"/>
				<DisabledFont inherits="GameFontDisableSmall"/>
			</Button>
			<EditBox name="$parentEditBox" inherits="FWEditBoxTemplate">
				<Anchors>
					 <Anchor point="LEFT" relativeTo="$parentText" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="5" y="0"/>
						</Offset>
					</Anchor>
					 <Anchor point="RIGHT" relativeTo="$parentDefault" relativePoint="LEFT">
						<Offset>
							<AbsDimension x="-5" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						this:SetText(FW.Settings[this:GetParent().option.."Msg"]);
					</OnShow>
					<OnEnterPressed>
						FW.Settings[this:GetParent().option.."Msg"] = getglobal(this:GetParent():GetName().."EditBox"):GetText();
						if this:GetParent().func then this:GetParent().func(); end
						this:ClearFocus();
					</OnEnterPressed>
					<OnEditFocusLost>
						this:HighlightText(0,0);
						getglobal(this:GetParent():GetName().."EditBox"):SetText(FW.Settings[this:GetParent().option.."Msg"]);
					</OnEditFocusLost>
				</Scripts>
			</EditBox>
		</Frames>
		<Scripts>
			<OnEnter>
				FW:ShowTip();
			</OnEnter>
			<OnLeave>
				FW:HideTip();
			</OnLeave>
		</Scripts>
	</Frame>
	
