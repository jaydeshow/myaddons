		<Frames>
			<Button name="$parentDefault">
				<Size>
					<AbsDimension x="45" y="20"/>
				</Size>
				<Anchors>
					 <Anchor point="RIGHT" relativePoint="RIGHT">
						<Offset>
							<AbsDimension x="-5" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						local filter, spell = this:GetParent().option,getglobal(this:GetParent():GetName().."EditBox"):GetText();
						if FW.Default[filter][spell] then
							if not FW.Settings[filter][spell] then
								FW.Settings[filter][spell] = {};
							end
							FW.Settings[filter][spell][1] = FW.Default[filter][spell][1];
							FW.Settings[filter][spell][2] = FW.Default[filter][spell][2];
							FW.Settings[filter][spell][3] = FW.Default[filter][spell][3];
							FW.Settings[filter][spell][4] = FW.Default[filter][spell][4];
							
							this:GetParent().func(spell,FW.Settings[filter][spell][1] or 0);
							getglobal(this:GetParent():GetName().."TypeButton"):SetText(FW:TypeName(FW.Default[filter][spell][1]));
						else
							FW.Settings[filter][spell]=nil;
							this:GetParent().func(spell,0);
							getglobal(this:GetParent():GetName().."TypeButton"):SetText(FW:TypeName(0));
						end
						
						FW:SetFilterColor(FW.Settings[filter][spell],this:GetParent());
					</OnClick>
				</Scripts>
				<NormalFont inherits="GameFontNormalSmall"/>
				<HighlightFont inherits="GameFontHighlightSmall"/>
				<DisabledFont inherits="GameFontDisableSmall"/>
			</Button>
			<Button name="$parentColorSwatch">
