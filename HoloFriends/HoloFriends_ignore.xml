				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				this:RegisterForClicks("LeftButtonUp", "RightButtonUp");
				this:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnDragStart>
				HoloIgnore_NameButton_OnDragStart();
			</OnDragStart>
			<OnDragStop>
				HoloIgnore_NameButton_OnDragStop();
			</OnDragStop>
			<OnClick>
				HoloIgnore_NameButton_OnClick(arg1);
				PlaySound("igMainMenuOptionCheckBoxOn");
			</OnClick>
			<OnEnter>
				HoloIgnore_NameButton_SetTooltip();
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<NormalTexture name="$parentTexture" file="Interface\Buttons\UI-MinusButton-UP">
			<Size>
