	<Frame name="FWCDBarTemplate" virtual="true" minValue="0" maxValue="1" defaultValue="1" hidden="true">
		<Size>
			<AbsDimension x="135" y="12"/>
		</Size>
		<HitRectInsets>
			<AbsInset left="0" right="0" top="0" bottom="0"/>
		</HitRectInsets>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentTag" inherits="GameFontHighlightSmall" justifyH="CENTER">
					<Size><AbsDimension x="30" y="12" /></Size>
					<Anchors><Anchor point="CENTER"/></Anchors>
				</FontString>
				<Texture name="$parentSplashIcon" file= "Interface\TutorialFrame\TutorialFrameAlert">
					<Size>
						<AbsDimension x="12" y="12"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
					<!--<TexCoords left="0.133" right="0.867" top="0.133" bottom="0.867"/>-->
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture name="$parentTexture" file= "Interface\PaperDollInfoFrame\UI-Character-Skills-Bar">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Button name="$parentIcon">
				<Size>
					<AbsDimension x="12" y="12"/>
				</Size>
				<Anchors>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Anchors>
				<NormalTexture name ="$parentTexture" file="Interface\TutorialFrame\TutorialFrameAlert">
					<TexCoords left="0.133" right="0.867" top="0.133" bottom="0.867"/>
				</NormalTexture>
				<Scripts>
					<OnUpdate>
						-- also update tooltip when this button is changed while we're over it with our mouse
						if this.over then
							GameTooltip_AddNewbieTip(this.title, 1.0, 1.0, 1.0,this.tip);
						end
					</OnUpdate>
					<OnLoad>
						this:RegisterForClicks("RightButtonUp");
						this.title="";
						this.tip="";
					</OnLoad>
					<OnClick>
						FW:CooldownIcon_OnClick();
					</OnClick>
					<OnEnter>
						this.over=1;
						GameTooltip_AddNewbieTip(this.title, 1.0, 1.0, 1.0,this.tip);
					</OnEnter>
					<OnLeave>
						this.over=nil;
						HideUIPanel(GameTooltip);
					</OnLeave>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				getglobal(this:GetName().."Texture"):SetVertexColor(1,0.5,0);
			</OnLoad>
		</Scripts>
	</Frame>

