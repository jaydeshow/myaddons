<Ui xmlns="http://www.blizzard.com/wow/ui/"   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://www.blizzard.com/wow/ui/
C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">
	<Script file="Forte_Healthstone.lua"/>
	
	<StatusBar name="FWHSBarTemplate" virtual="true" minValue="0" maxValue="1" defaultValue="1" hidden="true">
		<Size>
			<AbsDimension x="100" y="12"/>
		</Size>
		<HitRectInsets>
			<AbsInset left="0" right="0" top="0" bottom="0"/>
		</HitRectInsets>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentAmount" inherits="GameFontHighlightSmall" justifyH="RIGHT">
					<Anchors>
						<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
							<Offset>
								<AbsDimension x="-1" y="0"/>
							</Offset>
						</Anchor>
						<Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
							<Offset>
								<AbsDimension x="-1" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentName" inherits="GameFontHighlightSmall" justifyH="CENTER" hidden="false">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="1" y="0"/>
							</Offset>
						</Anchor>
						<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="1" y="0"/>
							</Offset>
						</Anchor>
						<Anchor point="TOPRIGHT" relativeTo="$parentAmount" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="-1" y="0"/>
							</Offset>
						</Anchor>
						<Anchor point="BOTTOMRIGHT" relativeTo="$parentAmount" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="-1" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<Texture name="$parentSpark" file="Interface\CastingBar\UI-CastingBar-Spark" alphaMode="ADD">
					<Size>
						<AbsDimension x="12" y="24"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND">
				<Texture name="$parentBack" file="Interface\PaperDollInfoFrame\UI-Character-Skills-Bar">
					<Size>
						<AbsDimension x="100" y="12"/>
					</Size>
				</Texture>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>
				GameTooltip_AddNewbieTip(this.title, 1.0, 1.0, 1.0,this.tip);
			</OnEnter>
			<OnLeave>
				HideUIPanel(GameTooltip);
			</OnLeave>
		</Scripts>
		<BarTexture file="Interface\PaperDollInfoFrame\UI-Character-Skills-Bar"/>
		<BarColor r=".64" g=".21" b=".93"/>
	</StatusBar>
	
	<Frame name="FWHSFrame" movable="true" toplevel="true" parent="UIParent" hidden="false">
		<Size>
			<AbsDimension x="106" y="20" />
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentAmount1" inherits="GameFontHighlightSmall" justifyH="CENTER">
					<Anchors>
						<Anchor point="LEFT" relativeTo="$parent" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="18" y="-10"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentAmount2" inherits="GameFontHighlightSmall" justifyH="CENTER">
					<Anchors>
						<Anchor point="LEFT" relativeTo="$parent" relativePoint="CENTER">
							<Offset>
								<AbsDimension x="16" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button name="FWHSButton" inherits="SecureActionButtonTemplate">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="2" y="-2"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						this:RegisterForClicks("LeftButtonUp", "RightButtonUp");
						this:SetAttribute("type1" ,"spell");
						this:SetAttribute("spell", FW.L.CREATE_HEALTHSTONE);
						
						this:SetAttribute("*type2", "item");			
						this:SetAttribute("*item2", FW.L.MASTER_HS);
							
						this.title="";
						this.tip="";
					</OnLoad>
					<OnUpdate>
						-- also update tooltip when this button is changed while we're over it with our mouse
						if this.over and this.oldtip ~= this.tip then
							this.oldtip = this.tip;
							GameTooltip_AddNewbieTip(this.title, 1.0, 1.0, 1.0,this.tip);
						end
					</OnUpdate>
					<OnEnter>
						this.over = 1;
						GameTooltip_AddNewbieTip(this.title, 1.0, 1.0, 1.0,this.tip);
					</OnEnter>
					<OnLeave>
						this.over = nil;
						HideUIPanel(GameTooltip);
					</OnLeave>
				</Scripts>
				<NormalTexture file="Interface\AddOns\Forte_Core\Textures\HS1"/>
				<HighlightTexture file="Interface\AddOns\Forte_Core\Textures\HS2"/>
			</Button>
			<Button name="FWSWButton" inherits="SecureActionButtonTemplate">
				<Size>
					<AbsDimension x="16" y="16"/>
				</Size>
				<Anchors>
					<Anchor point="LEFT" relativeTo="$parent" relativePoint="CENTER">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnUpdate>
						if this.over then
							local str = "";if FW.LastHSCheck ~= 0 then str=string.format(FW.L.LAST_CHECK,math.floor(GetTime()-FW.LastHSCheck)); end
							GameTooltip_AddNewbieTip(FW.L.UPDATE_AND_RITUAL, 1.0, 1.0, 1.0,FW.L.GET_HS_UPDATE..str);
						end
					</OnUpdate>
					<OnEnter>
						this.over = 1;
					</OnEnter>
					<OnLeave>
						this.over = nil;
						HideUIPanel(GameTooltip);
					</OnLeave>
					<OnLoad>
						this:RegisterForClicks("LeftButtonUp", "RightButtonUp");
						this:SetAttribute("type2" ,"spell");
						this:SetAttribute("spell2", FW.L.RITUAL_OF_SOULS);
						this:SetAttribute("type1" ,"menu");
						this.menu = FW.HealthstoneCheck;
					</OnLoad>
				</Scripts>
				<NormalTexture file="Interface\AddOns\Forte_Core\Textures\SW1"/>
				<HighlightTexture file="Interface\AddOns\Forte_Core\Textures\SW2"/>
			</Button>
		</Frames>
		
		<Scripts>
			<OnLoad>
				FW:HealthstoneOnload();
			</OnLoad>
			<OnMouseUp>
				FW:HSFrame_OnClick(arg1);
				FW:StopMoving();
			</OnMouseUp>
			<OnMouseDown>
				FW:StartMoving(arg1);
			</OnMouseDown>
		</Scripts> 
	</Frame>
	<Frame name="FWHSBackground" parent="UIParent" hidden="false">
		<Size>
			<AbsDimension x="106" y="20" />
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="FWHSFrame" relativePoint="TOPLEFT"/>
			<Anchor point="BOTTOMRIGHT" relativeTo="FWHSrame" relativePoint="BOTTOMRIGHT"/>
		</Anchors>
		<Frames>
			<StatusBar name="FWHSBar1" inherits="FWHSBarTemplate"/>
			<StatusBar name="FWHSBar2" inherits="FWHSBarTemplate"/>
			<StatusBar name="FWHSBar3" inherits="FWHSBarTemplate"/>
			<StatusBar name="FWHSBar4" inherits="FWHSBarTemplate"/>
			<StatusBar name="FWHSBar5" inherits="FWHSBarTemplate"/>
			<StatusBar name="FWHSBar6" inherits="FWHSBarTemplate"/>
		</Frames>
		<Backdrop bgFile="Interface\AddOns\Forte_Core\Textures\Background" edgeFile="Interface\AddOns\Forte_Core\Textures\Border" tile="true">
			<EdgeSize><AbsValue val="5"/></EdgeSize>
			<TileSize><AbsValue val="5"/></TileSize>
			<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
		</Backdrop>
	</Frame>
</Ui>
