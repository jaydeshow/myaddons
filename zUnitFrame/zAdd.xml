<!-- ToT DeBuff  -->
	<Button name="zTargetofTargetDebuffButtonTemplate" virtual="true">
		<Size x="15" y="15"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parentIcon" setAllPoints="true"/>
			</Layer>
			<Layer level="OVERLAY">
				<Texture name="$parentBorder" file="Interface\Buttons\UI-Debuff-Overlays">
					<Size x="17" y="17"/>
					<Anchors>
						<Anchor point="CENTER">
							<Offset x="0" y="0"/>
					</Anchor>
					</Anchors>
					<TexCoords left="0.296875" right="0.5703125" top="0" bottom="0.515625"/>
				</Texture>
				<FontString name="$parentCount" inherits="GameTooltipTextSmall">
					<Anchors>
						<Anchor point="BOTTOMRIGHT">
							<Offset x="-1" y="0"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnEnter>
				GameTooltip:SetOwner(this, "ANCHOR_BOTTOMRIGHT", 15, -25);
				GameTooltip:SetUnitDebuff("targettarget", this:GetID());
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
	</Button>
